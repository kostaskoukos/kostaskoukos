---
import Layout from "../layouts/Layout.astro";
import Link from "../components/Link.astro";
---

<Layout title="Kostas' Portfolio">
  <main class="mx-auto px-4 py-4 md:w-3/5">
    <div class="flex flex-col gap-3">
      <h1
        class="inline-block bg-[linear-gradient(to_right,theme(colors.primary),theme(colors.accent))] bg-clip-text text-5xl font-black text-[transparent] drop-shadow-sm lg:text-6xl"
      >
        Kostas Koukos
      </h1>
      <p class="w-2/3">Meet your next favorite full-stack developer!</p>
      <div class=":flex-col flex flex-row items-center gap-4">
        <a
          class="text-md text-white cursor-pointer rounded-full bg-primary px-4 py-2 text-center transition-all duration-300 hover:scale-105 hover:brightness-75"
          href="#about">About me</a
        >
        <Link href="#projects">Projects</Link>
      </div>
    </div>
    <button id="theme" class="bg-secondary p-3">Switch theme</button>
    <script>
      const btn = document.querySelector("#theme")!;
      const root = document.querySelector("html")!;
      btn?.addEventListener("click", (e) => {
        root.classList.toggle("dark");
      });
    </script>
  </main>
</Layout>
