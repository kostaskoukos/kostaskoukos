---
import Layout from "../layouts/Layout.astro";
import Link from "../components/Link.astro";
---

<Layout title="Kostas' Portfolio">
  <main class="px-4 py-4">
    <div class="flex flex-col gap-3">
      <h1
        class="inline-block bg-[linear-gradient(to_right,theme(colors.primary),theme(colors.accent))] bg-clip-text text-5xl font-black text-[transparent] drop-shadow-sm lg:text-6xl"
      >
        Kostas Koukos
      </h1>
      <p class="w-2/3">Meet your next favorite full-stack developer!</p>
      <div class="flex flex-row items-center gap-4">
        <a
          class="text-md text-white cursor-pointer rounded-full bg-primary px-4 py-2 text-center transition-transform duration-200 hover:scale-105 hover:brightness-75"
          href="#about">About me</a
        >
        <Link href="#projects">Projects</Link>
      </div>
    </div>
  </main>
</Layout>
