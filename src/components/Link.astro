---
import { twMerge } from "tailwind-merge";
interface Props {
  href: string;
  class?: string;
}

const { class: style, href } = Astro.props;
---

<a
  href={href}
  class={twMerge(
    "relative cursor-pointer text-text after:absolute after:bottom-0 after:left-0 after:h-[0.1em] after:w-0 after:bg-[color:currentColor] after:transition-all after:duration-300 hover:after:w-full",
    style || "",
  )}><slot /></a
>
