---
interface Props {
  href: string;
}

const { href } = Astro.props;
---

<a
  href={href}
  class="relative cursor-pointer text-text after:absolute after:bottom-0 after:left-0 after:h-[0.1em] after:w-0 after:bg-[color:currentColor] after:transition-all after:duration-300 hover:after:w-full"
  ><slot /></a
>
